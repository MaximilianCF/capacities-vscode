{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node", "vscode"]
  },
  "include": ["extension.ts", "src/**/*.ts"],
  "exclude": ["node_modules", ".vscode-test"]
}
